<?xml version="1.0"?>
<robot name="robo">

  <!-- Link definitions -->

  <!-- Base Link -->
  <link name="base_link">
    <inertial>
      <mass value="1.0" />
      <inertia
        ixx="0.1" ixy="0.0" ixz="0.0"
        iyy="0.1" iyz="0.0"
        izz="0.1" />
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.5" length="0.1" />
      </geometry>
      <material name="blue" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.5" length="0.1" />
      </geometry>
    </collision>
  </link>

  <!-- Joint1 (Arm or Manipulator) -->
  <link name="joint1_link">
    <inertial>
      <mass value="0.5" />
      <inertia
        ixx="0.01" ixy="0.0" ixz="0.0"
        iyy="0.01" iyz="0.0"
        izz="0.01" />
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.1" length="1.0" />
      </geometry>
      <material name="green" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="1.0" />
      </geometry>
    </collision>
  </link>

  <!-- Joint2 (Arm or Manipulator) -->
  <link name="joint2_link">
    <inertial>
      <mass value="0.3" />
      <inertia
        ixx="0.005" ixy="0.0" ixz="0.0"
        iyy="0.005" iyz="0.0"
        izz="0.005" />
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.8" />
      </geometry>
      <material name="red" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.8" />
      </geometry>
    </collision>
  </link>

  <!-- Wheel (optional) -->
  <link name="wheel_link">
    <inertial>
      <mass value="0.2" />
      <inertia
        ixx="0.01" ixy="0.0" ixz="0.0"
        iyy="0.01" iyz="0.0"
        izz="0.01" />
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.2" length="0.05" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.2" length="0.05" />
      </geometry>
    </collision>
  </link>

  <!-- Joint Definitions -->

  <!-- Base to Joint1 -->
  <joint name="base_to_joint1" type="revolute">
    <parent link="base_link" />
    <child link="joint1_link" />
    <origin xyz="0 0 0.5" rpy="0 0 0" />
    <axis xyz="0 0 1" />
    <limit effort="10" velocity="1.0" lower="0.0" upper="1.5" />
  </joint>

  <!-- Joint1 to Joint2 -->
  <joint name="joint1_to_joint2" type="revolute">
    <parent link="joint1_link" />
    <child link="joint2_link" />
    <origin xyz="0 0 0.8" rpy="0 0 0" />
    <axis xyz="0 0 1" />
    <limit effort="10" velocity="1.0" lower="0.0" upper="1.5" />
  </joint>

  <!-- Differential Drive -->
  <joint name="base_to_wheel_left" type="revolute">
    <parent link="base_link" />
    <child link="wheel_link" />
    <origin xyz="0.5 0 0" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <limit effort="10" velocity="1.0" lower="0.0" upper="1.5" />
  </joint>

  <joint name="base_to_wheel_right" type="revolute">
    <parent link="base_link" />
    <child link="wheel_link" />
    <origin xyz="-0.5 0 0" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <limit effort="10" velocity="1.0" lower="0.0" upper="1.5" />
  </joint>

</robot>
